*{	
	
	margin:0;
}
html,body{
	height: 100%;
}
.wrap{
	min-height: 100%;
	height:auto !important;
	height:100%;
	margin:0 auto -118px;
}

body{
	font-family: "century gothic";
	background:url('../img/fondoGris.jpg');
}
.footer{
background:#333;
color:#fff;
font-size: 13px;
background: url("../img/fonditoFooter.png") no-repeat center top, -webkit-linear-gradient(top, #474A50, #0F161A) repeat-x 0 0;
text-align: center;
box-shadow: 0 3px 7px rgba(0,0,0,0.5) inset;
}
.footer, .push{
	height: 58px;
	padding:30px 0;
}
header{
	padding: 80px 0;
	font-size: 48px;
	text-align: center;
	background-color:#3b5389;
	color: #fff;
}
.container{
	margin:0 auto;
	width:400px;
	
}
.container a{
	cursor:pointer;
	text-decoration: none;
	border:none;
	
	height:150px;
	display:block;
}
.container a img {
	width:229px;
	height:84px;
}
.container legend{
	font-weight: bold;
	background: #fff;
	padding: 5px 10px;
	width:auto;
	border-radius: 3px;
	box-shadow: 3px 3px 15px rgba(0,0,0,0.5);
	height: 20px;
}
.container legend span{
	background: url("../img/candado.png") no-repeat;
	background-size: contain;
	display: block;
	float: right;
	width: 21px;
	height: 22px;
}
.container legend label{
	width: 117px;
	float: left;
}
.container h1{
	font-size: 1em;
	text-align: center;
}
fieldset{
	margin-top: 30px;
	border-radius: 3px;
	background:#eee;
	border: 1px solid #aaa;
	box-shadow:1px 1px 2px #fff inset;
	padding:1.5em;
}
.login label{
	width:150px;
	float:left;
	font-weight: bold;
}
.login input[type=text],input[type=password]{
	border-radius: 3px;
	padding:4px;
	margin:6px;
	border:1px solid #ccc;
	box-shadow: 0 1px 2px #ddd;
}
.login button{
	float:right;
	margin:10px;
	background:linear-gradient(#fff,#ccc);
	border:solid 1px #aaa;
	padding:6px;
	width:80px;
	border-radius: 5px;
}
.login button:active{
	background:linear-gradient(#ccc,#fff);
}
.login hr{
	border:0;
	border-bottom:solid 1px #aaa;
	box-shadow: 0 1px 0 #fff;
	margin-top: 15px;

}
nav{
	background: -webkit-linear-gradient(top, #595C64, #1B1B1C);
	background: -moz-linear-gradient(top, #595C64, #1B1B1C);
	background: -o-linear-gradient(top, #595C64, #1B1B1C);
	background: -ms-linear-gradient(top, #595C64, #1B1B1C);
	background: linear-gradient(top, #595C64, #1B1B1C);
	text-align: center;
	box-shadow: 0 1px 2px rgba(0,0,0,0.5);
	position: relative;


}


nav ul li{
	display: inline-block;
	font-size: 16px;
	padding:17px 12px;
	text-transform: uppercase;
	transition:background 1s linear;

}
nav ul li:hover{
	background:-webkit-linear-gradient(top, #696c72, #333334);
	background:-moz-linear-gradient(top, #696c72, #333334);
	background:-o-linear-gradient(top, #696c72, #333334);
	background:-ms-linear-gradient(top, #696c72, #333334);
	background:linear-gradient(top, #696c72, #333334);
	position:relative;
	box-shadow: 0 1px 2px rgba(0,0,0,0.5);
}
nav ul 	li a{
	color:#fff;
	text-decoration: none;
}
#parrafo{
	width: 900px;
	margin:0 auto;
	font-size: 18px;
	text-align: justify;
}
